<Window x:Class="Roman.Windows.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Roman.Models"
        mc:Ignorable="d"
        Title="Conversion Log" Height="400" Width="300"
        Closing="LogWindow_Closing">
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="2">
            <ScrollViewer>
                <TextBlock x:Name="textBlock" Margin="3" FontSize="14" ScrollViewer.HorizontalScrollBarVisibility="Auto"
         ScrollViewer.VerticalScrollBarVisibility="Auto"></TextBlock>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
